<!DOCTYPE HTML>
<html>
<head>
    {{> title}}
    {{> meta-partial}}
    <link href="/css/pasteats.css" rel="stylesheet">
    {{> metamenu-partial}}
</head>



<body>
    {{> menupanel-partial}}
    
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button id="menuButton" type="button" class="navbar-toggle pull-left" >
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="navbar-brand">Past Eats</span>

        <a href="/pasteats-editcreate/2" id="add" class="add"><span class="glyphicon glyphicon-plus"></span></a>
      </div>
    </div>
    <div id="underlay"></div>

    
    <div class="container">
        {{#each pasteats}}    
            <div id="overlay" class="web_dialog_overlay"></div>
            <div id="dialog" class="web_dialog">
                Delete this post?
                <table style="width: 100%;" cellspacing="0">
                  <tr>
                    <td class ="btnNo">
                        No
                    </td>
                    <td class="btnYes">
                        <span style="color:blue">Yes</span>
                    </td>
                  </tr>
                </table>
            </div>

        <div class="swipe-tile" id="swipe1">
            <div class="pasteats-entry" id="{{id}}">
                <div class= "entry-text row-fluid">
                    <div class= "col-xs-8"><b>{{title}}</b></div>
                    <div class= "col-xs-4">{{formatted_date}}</div>
                    <p>{{summary}}</p>   
                </div>
                <img src= "{{image}}">
                <div class= "caption-text"> {{caption}}</div>
                <div class="entry-end">
                    <!-- <span class="glyphicon glyphicon-share-alt"></span> -->
                    <span class="glyphicon glyphicon-trash"></span>
                    <!-- <a href="/pasteats-editcreate/2"><span class="glyphicon glyphicon-pencil"></span> -->
                </div>        
                </div>
            </div>
        {{/each}}

        <div class = "hint">
            Tap <span class="glyphicon glyphicon-plus"></span> to add to your Past Eats log!
        </div>

    </div>

        <script src="/js/pasteats2.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </body>
    </html>