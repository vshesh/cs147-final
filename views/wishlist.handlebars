<body>
	{{> menu-partial}}
	{{> menupanel-partial}}
	<div class="container">
{{#each wishlist}}
		<div class="wishlist-entry" id="swipe{{id}}">
			
			<div class="swipe-options">
				<div class="option"> 
					<span class="glyphicon glyphicon-remove"></span></div>
					<div class="option">
						<a href="/pasteats-editcreate/2"><span class="glyphicon glyphicon-pencil"></span></a>
					</div>
				</div>


			<a  class = "place" gid = "{{g_places_id}}" id = "{{g_places_ref}}"  href="/info/{{g_places_id}}">
				

			</a>


			</div>
		{{/each}}
	</div>

	<script type="text/javascript">
	$(function(){
		$('.place').each(function(index){
			console.log(index);
			var placeID = $(this).attr('gid');
			console.log(placeID);
			$.get('/places/details/' + placeID, callback);
			function callback(result, err){
				var theBody = JSON.parse(result)
				$('#' + theBody.result.id).length
				$('#' + theBody.result.id).html( $('#' + theBody.result.id).html() + createResultDiv(theBody.result) );

			}
		});
	});
	function createResultDiv(place) {
      var price = place.price_level ? Array(place.price_level+1).join('$') : "";
      var hours = place.opening_hours ? place.opening_hours : "";
      var opennow = hours.open_now;
      var displayopen = "";
      if (opennow != undefined) {
        displayopen = opennow ? "open" : "not open";
      }
      return '    <div class="photo"> '+
      '      <img src="'+place.icon+'">'+
      '    </div>'+
      '    <div title=" This is an entry in your wishlist" rel="tooltip" class= "left-info">'+
      '      <ul >   '+
      '        <li>'+place.name +'</li>'+
      '        <li>'+(place.types? place.types.toString(): "")+'</li>'+
      '        <li>'+(place.rating? place.rating : "")+'</li>'+
      '      </ul>'+
      '    </div>'+
      '    <div title="These are details about restaraunts" rel="tooltip" class= "right-info">'+
      '      <ul>'+
      '        <li>'+'1.2 mi'+'</li>'+
      '        <li>'+displayopen+'</li>'+
      '        <li>'+price+'</li>'+
      '      </ul>'+
      '    </div>';
	}
	</script>


		<!-- Req for menubar-->
		<script src="/js/menubar/modernizr.custom.js"></script>
		<!-- Classie - class helper functions by @desandro https://github.com/desandro/classie -->
