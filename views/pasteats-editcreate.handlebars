<html>
<head>
	{{>title}}
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/menubar/component.css" rel="stylesheet">
  <link href="/css/introHCI.css" rel="stylesheet">
  <link href="/css/pasteats-editcreate.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="/js/pasteats-editcreate2.js"></script>
  
</head>

<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-headerw">
      <button id="menuButton" type="button" class="navbar-toggle pull-left">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </button>
      <span class="navbar-brand">Create Entry</span>
  </div>
